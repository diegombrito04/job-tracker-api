# ── Copie este arquivo para .env e preencha os valores ────────────────────────
# cp .env.example .env

# Spring profile ativo:
#   dev  — PostgreSQL via Docker Compose (recomendado para rodar 100% em Docker)
#   prod — PostgreSQL em produção via env vars
SPRING_PROFILES_ACTIVE=dev

# Banco de dados
POSTGRES_DB=jobtracker_dev
DB_URL=jdbc:postgresql://postgres:5432/jobtracker_dev
DATABASE_URL=jdbc:postgresql://localhost:5432/jobtracker_dev
DB_USERNAME=jobtracker
DB_PASSWORD=jobtracker

# JWT — troque por um valor seguro em produção (mínimo 32 chars)
JWT_SECRET=change-this-to-a-strong-random-secret-minimum-32-chars
JWT_EXPIRATION_MS=86400000
AUTH_COOKIE_NAME=jt_session
AUTH_COOKIE_SECURE=false
AUTH_COOKIE_SAME_SITE=Lax
AUTH_COOKIE_PATH=/
AUTH_COOKIE_DOMAIN=

# CORS — origens permitidas separadas por vírgula
CORS_ALLOWED_ORIGINS=http://localhost:5173

# Frontend build (Docker)
# Em Docker Compose, use /api para o Nginx fazer proxy para o backend.
VITE_API_URL=/api
